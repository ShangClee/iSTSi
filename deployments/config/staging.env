# Staging Environment Configuration

# Deployment settings
DEPLOY_HOST=staging.bitcoincustody.com
DEPLOY_USER=deploy
DEPLOY_PATH=/opt/bitcoin-custody

# Database configuration
DATABASE_URL=postgres://bitcoin_custody:${DB_PASSWORD}@postgres-staging:5432/bitcoin_custody_staging
DB_PASSWORD=${STAGING_DB_PASSWORD}

# Service URLs
FRONTEND_URL=https://staging.bitcoincustody.com
BACKEND_URL=https://api-staging.bitcoincustody.com
FRONTEND_DOMAIN=staging.bitcoincustody.com

# Soroban configuration
SOROBAN_NETWORK=testnet
SOROBAN_NETWORK_URL=https://soroban-testnet.stellar.org
SOROBAN_NETWORK_PASSPHRASE="Test SDF Network ; September 2015"
SOROBAN_DEPLOY_ACCOUNT=${STAGING_SOROBAN_ACCOUNT}

# Security settings
JWT_SECRET=${STAGING_JWT_SECRET}
CORS_ORIGINS=https://staging.bitcoincustody.com

# Logging
LOG_LEVEL=info
RUST_LOG=info

# Docker settings
COMPOSE_PROJECT_NAME=bitcoin_custody_staging
COMPOSE_FILE=docker-compose.yml:docker-compose.staging.yml

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/staging.bitcoincustody.com.crt
SSL_KEY_PATH=/etc/ssl/private/staging.bitcoincustody.com.key

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30