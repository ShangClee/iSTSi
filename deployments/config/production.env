# Production Environment Configuration

# Deployment settings
DEPLOY_HOST=bitcoincustody.com
DEPLOY_USER=deploy
DEPLOY_PATH=/opt/bitcoin-custody

# Database configuration
DATABASE_URL=postgres://bitcoin_custody:${DB_PASSWORD}@postgres-prod:5432/bitcoin_custody_production
DB_PASSWORD=${PROD_DB_PASSWORD}

# Service URLs
FRONTEND_URL=https://bitcoincustody.com
BACKEND_URL=https://api.bitcoincustody.com
FRONTEND_DOMAIN=bitcoincustody.com

# Soroban configuration
SOROBAN_NETWORK=mainnet
SOROBAN_NETWORK_URL=https://soroban-mainnet.stellar.org
SOROBAN_NETWORK_PASSPHRASE="Public Global Stellar Network ; September 2015"
SOROBAN_DEPLOY_ACCOUNT=${PROD_SOROBAN_ACCOUNT}

# Security settings
JWT_SECRET=${PROD_JWT_SECRET}
CORS_ORIGINS=https://bitcoincustody.com

# Logging
LOG_LEVEL=warn
RUST_LOG=warn

# Docker settings
COMPOSE_PROJECT_NAME=bitcoin_custody_prod
COMPOSE_FILE=docker-compose.yml:docker-compose.production.yml

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/bitcoincustody.com.crt
SSL_KEY_PATH=/etc/ssl/private/bitcoincustody.com.key

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60

# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 1 * * *"  # Daily at 1 AM
BACKUP_RETENTION_DAYS=90

# High availability
REPLICA_COUNT=3
LOAD_BALANCER_ENABLED=true
AUTO_SCALING_ENABLED=true
MIN_REPLICAS=2
MAX_REPLICAS=10

# Security
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
WAF_ENABLED=true

# Performance
CACHE_ENABLED=true
CDN_ENABLED=true
COMPRESSION_ENABLED=true